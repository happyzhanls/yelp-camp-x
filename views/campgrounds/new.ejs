<% include ../partials/header %>

<div class="container-fluid" id="center-div">
    <h2 class="text-center">Create a new campground!</h1>
    <form action="/campgrounds" method="post" class="mx-auto" style="width: 500px;">
      <div class="form-group">
        <input type="text" class="form-control" placeholder="Name of the campground" name="name" required>
      </div>
      <div class="form-group">
        <input type="text" class="form-control" placeholder="ImageURL" name="imageURL" required>
      </div>
      <div class="form-group">
        <textarea row="3" class="form-control" placeholder="Description" name="description" required></textarea>
      </div>
      <div class="form-group">
        <input class="form-control" type="text" placeholder="Location, eg: Yosemite National Park, CA" name="location" required>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary btn-block">Submit</button>
      </div>
      <div class="form-group">
        <a href="/campgrounds" class="btn btn-secondary btn-block" role="button" aria-pressed="true">Go Back</a>
      </div>
    </form>
</div>

<% include ../partials/footer %>