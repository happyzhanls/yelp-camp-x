<% include ../partials/header %>

<div class="container">
  <form action="/campgrounds" method="post" class="mx-auto customized-form" enctype="multipart/form-data">
    <h2 class="text-center">Create a new campground</h2>
    <hr></hr>
    <div class="form-group">
      <label for="name">Campground Name</label>
      <input id="name" type="text" class="form-control" placeholder="Enter your campground name" name="campground[name]" required>
    </div>
    <div class="form-group">
      <label for="image">Campground Image</label>
      <input id="image" type="file" class="form-control" name="image" accept="image/*" required>
      <img id="imageShow" src="#" alt="Image Preview" width="476" height="300"></img>
    </div>
    <div class="form-group">
      <label for="description">Campground Description</label>
      <textarea id="description" class="form-control" placeholder="Enter your campground description" name="campground[description]" required title="The description cannot be empty"></textarea>
    </div>
    <div class="form-group">
      <label for="cost">Campground Cost</label>
      <div class="input-group">
        <div class="input-group-prepend">
          <button class="btn btn-outline-dark border-right-0" type="button" disabled>$</button>
        </div>
        <input id="cost" class="form-control" type="number" name="campground[cost]" placeholder="Enter the cost per night" step="0.1" min="0" required>
        <div class="input-group-append">
          <button class="btn btn-outline-dark border-left-0" type="button" disabled>/night</button>
        </div>
      </div>      
    </div>
    <div class="form-group">
      <label for="location">Campground Location</label>
      <input id="location" type="text" class="form-control" placeholder="Enter your campground location, eg: Yosemite National Park, CA" name="campground[location]" required>
    </div>
    <div class="form-row">
      <div class="form-group col-4 offset-1">
        <button type="submit" class="btn btn-primary btn-block rounded">Submit</button>
      </div>
      <div class="form-group col-4 offset-2">
        <button type="reset" class="btn btn-secondary btn-block rounded">Cancel</button>
      </div>
    </div>
    <div class="form-group">
      <a href="/campgrounds" class="btn btn-secondary btn-block rounded" role="button" aria-pressed="true">Go Back</a>
    </div>
  </form>
</div>
<% include ../partials/footer %>
<script src="/scripts/readImage.js"></script>