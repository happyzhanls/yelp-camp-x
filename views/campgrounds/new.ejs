<% include ../partials/header %>

<div class="container">
  <form action="/campgrounds" method="post" class="mx-auto customized-form" enctype="multipart/form-data">
    <h2 class="text-center">Create a new campground</h2>
    <hr></hr>
    <div class="form-group">
      <label for="a">Campground Name</label>
      <input id="a" type="text" class="form-control" placeholder="Enter your campground name" name="campground[name]" required>
    </div>
    <div class="form-group">
      <label for="b">Campground Image</label>
      <input id="b" type="file" class="form-control" name="image" accept="image/*" required>
    </div>
    <div class="form-group">
      <label for="c">Campground Description</label>
      <textarea id="c" class="form-control" placeholder="Enter your campground description" name="campground[description]" required title="The description cannot be empty"></textarea>
    </div>
    <div class="form-group">
      <label for="d">Campground Location</label>
      <input id="d" type="text" class="form-control" placeholder="Enter your campground location, eg: Yosemite National Park, CA" name="campground[location]" required>
    </div>
    <div class="form-row">
      <div class="form-group col-4 offset-1">
        <button type="submit" class="btn btn-primary btn-block rounded">Submit</button>
      </div>
      <div class="form-group col-4 offset-2">
        <button type="reset" class="btn btn-secondary btn-block rounded">Cancel</button>
      </div>
    </div>
    <div class="form-group">
      <a href="/campgrounds" class="btn btn-secondary btn-block rounded" role="button" aria-pressed="true">Go Back</a>
    </div>
  </form>
</div>

<% include ../partials/footer %>