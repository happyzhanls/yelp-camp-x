<% include ../partials/header %>

<div class="container">
  <form action="/campgrounds/<%= campground._id %>?_method=put" method="post" class="mx-auto customized-form" enctype="multipart/form-data">
    <h2 class="text-center">Edit your campground below</h1>
    <hr></hr>
    <div class="form-group">
      <label for="a">Current Name</label>
      <input id="a" type="text" class="form-control" value="<%= campground.name %>" name="campground[name]" required>
    </div>
    <div class="form-group">
      <label for="b">Current Image</label>
      <input id="b" type="file" class="form-control" name="image" accept="image/*">
      <img id="imageShow" src="<%= campground.image %>" alt="Image Preview" width="476" height="300"></img>
    </div>
    <div class="form-group">
      <label for="c">Current Description</label>
      <textarea id="c" class="form-control" name="campground[description]" required><%= campground.description %></textarea>
    </div>
    <div class="form-group">
      <label for="d">Current Location</label>
      <input id="d" type="text" class="form-control" value="<%= campground.location %>" name="campground[location]" required>
    </div>
    <div class="form-row">
      <div class="form-group col-4 offset-1">
        <button type="submit" class="btn btn-primary btn-block rounded">Save changes</button>
      </div>
      <div class="form-group col-4 offset-2">
        <button type="reset" class="btn btn-secondary btn-block rounded">Cancel</button>
      </div>
    </div>
    <div class="form-group">
        <a href="/campgrounds/<%= campground._id %>" class="btn btn-secondary btn-block rounded" role="button" aria-pressed="true">Go Back</a>
    </div>
  </form>
</div>

<script src="/scripts/readImage.js"></script>
<% include ../partials/footer %>