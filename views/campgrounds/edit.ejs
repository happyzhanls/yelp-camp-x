<% include ../partials/header %>

<div class="container">
  <form action="/campgrounds/<%= campground._id %>?_method=put" method="post" class="mx-auto customized-form" enctype="multipart/form-data">
    <h2 class="text-center">Edit your campground below</h1>
    <hr></hr>
    <div class="form-group">
      <label for="name">Current Name</label>
      <input id="name" type="text" class="form-control" value="<%= campground.name %>" name="campground[name]" required>
    </div>
    <div class="form-group">
      <label for="image">Current Image</label>
      <input id="image" type="file" class="form-control" name="image" accept="image/*">
      <img id="imageShow" src="<%= campground.image %>" alt="Image Preview"></img>
    </div>
    <div class="form-group">
      <label for="description">Current Description</label>
      <textarea id="description" rows="5" class="form-control" name="campground[description]" required><%= campground.description %></textarea>
    </div>
    <div class="form-group">
      <label for="cost">Current Cost</label>
      <div class="input-group">
        <div class="input-group-prepend">
          <button class="btn btn-outline-dark border-right-0" type="button" disabled>$</button>
        </div>
        <input id="cost" class="form-control" type="number" name="campground[cost]" value="<%= campground.cost %>" step="0.1" min="0" required>
        <div class="input-group-append">
          <button class="btn btn-outline-dark border-left-0" type="button" disabled>/night</button>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label for="location">Current Location</label>
      <input id="location" type="text" class="form-control" value="<%= campground.location %>" name="campground[location]" required>
    </div>
    <div class="form-row">
      <div class="form-group col-4 offset-1">
        <button type="submit" class="btn btn-primary btn-block rounded">Save changes</button>
      </div>
      <div class="form-group col-4 offset-2">
        <button type="reset" class="btn btn-secondary btn-block rounded">Cancel</button>
      </div>
    </div>
    <div class="form-group">
        <a href="/campgrounds/<%= campground._id %>" class="btn btn-secondary btn-block rounded" role="button" aria-pressed="true">Go Back</a>
    </div>
  </form>
</div>

<!--<script src="/scripts/city_state.js"></script>-->
<% include ../partials/footer %>
<script src="/scripts/imagePreview.js"></script>