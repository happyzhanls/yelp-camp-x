<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 style="text-align: center">Edit your comment below!</h1>
    <div style="width: 30%; margin: 0 auto">
      <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=put" method="post">
        <div class="form-group">
          <input type="text" class="form-control" name="comment[text]" value="<%= comment.text %>">
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Submit</button>
        </div>
        <a href="/campgrounds/<%= campground_id %>">Go back</a>
      </form>
    </div>
  </div>
</div>


<% include ../partials/footer %>