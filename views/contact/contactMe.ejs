<% include ../partials/header %>

<div class="container">
  <form action="/contact/send" method="post" class="mx-auto customized-form">
    <h2 class="text-center">Contact Me</h2>
    <hr></hr>
    <div class="form-group">
      <label for="a">Name</label>
      <input type="text" class="form-control" id="a" name="name" placeholder="Your Name" required="required" data-error="Your Name is Required">
    </div>
    <div class="form-group">
      <label for="b">Email</label>
      <input type="email" class="form-control" id="b" name="email" placeholder="Your Email Address" required="required" data-error="Your Email is Required">
    </div>
    <div class="form-group">
      <label for="c">Message</label>
      <textarea class="form-control" id="c" name="message" placeholder="Your Message Here" rows="4" required="required" data-error="Please, leave me a message."></textarea>
    </div>
    <div class="form-group">
      <div class="g-recaptcha" data-sitekey="6LchXkAUAAAAAHCIsSrigqO49Pp513yAv74q6gne"></div>
    </div>
    <div class="form-row">
      <div class="form-group col-4 offset-1">
        <button class="btn btn-primary btn-block rounded">Send Email</button>
      </div>
      <div class="form-group col-4 offset-2">
        <button type="reset" class="btn btn-secondary btn-block rounded">Cancel</button>
      </div>
    </div>
    <div class="form-group">
      <a href="/campgrounds" class="btn btn-secondary btn-block rounded" role="button" aria-pressed="true">Go Back</a>
    </div>
  </form>
</div>

<% include ../partials/footer %>